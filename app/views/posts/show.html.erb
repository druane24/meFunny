  <nav class="navbar navbar-toggleable-md navbar-light bg-faded" style="background-color: #e3f2fd;">
    <%= link_to image_tag("logo.png",size: "50x50"), posts_all_path, class: "navbar-brand"  %> 
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <%= link_to "All", posts_all_path, class: "nav-item nav-link active", id: "header" %>
        <%= link_to "Funny", posts_funny_path, class: "nav-item nav-link", id: "header" %>
        <%= link_to "Awww", posts_awww_path, class: "nav-item nav-link" , id: "header"%>
        <%= link_to "Satisfying", posts_satisfying_path, class: "nav-item nav-link" , id: "header"%>
