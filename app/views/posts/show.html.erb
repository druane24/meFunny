    <div class="row">
      <div class="col-xs-1 col-sm-1"></div>
      <div class="col-xs-10 col-md-10">
        <div class="jumbotron">
          <%= link_to @post.title, @post.web_url, :id => "showtitle" %>
          <hr class="my-4">
          <img src=<%= @post.img_url %> style="width:100%;">
          <div align='right'>
            <%= social_share_button_tag(@post.title, :image => @post.img_url) %>
          </div>
        </div>
      </div>
      <div class="col-xs-1 col-sm-1"></div>
